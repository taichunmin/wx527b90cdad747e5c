.content-title {
    align-items: center;
    background: transparent;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    padding-bottom: 160rpx;
}

.content-name {
    color: #45526b;
    font-family: PingFangSC-Regular;
    font-size: 36rpx;
    font-weight: 400;
    line-height: 50rpx;
    margin-top: 22rpx;
}

.content-line {
    background: #45526b;
    border-radius: 2px;
    height: 6rpx;
    width: 28rpx;
}

.content-describe {
    color: #8c98ae;
    font-family: PingFangSC-Regular;
    font-size: 24rpx;
    font-weight: 400;
    line-height: 24rpx;
    margin-bottom: 22rpx;
    margin-top: 6rpx;
}

.doc-container {
    align-items: center;
    background-color: #fff;
    border-radius: 50%;
    bottom: 60rpx;
    box-shadow: 0 3px 8px 0 rgba(155,193,185,.5);
    display: flex;
    height: 100rpx;
    justify-content: center;
    position: fixed;
    right: 40rpx;
    width: 100rpx;
    z-index: 2;
}

.doc-img {
    height: 50rpx;
    width: 50rpx;
}

.doc-txt {
    color: #3963bc;
    font-size: 28rpx;
    margin-top: 15rpx;
}