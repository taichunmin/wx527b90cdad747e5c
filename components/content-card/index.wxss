.content-card {
    background-color: #fff;
    background: #fff;
    border-bottom: 20rpx solid #f7f7f7;
    border-radius: 20rpx 20rpx 0 0;
    box-shadow: 0 -4rpx 16rpx 0 rgba(148,163,178,.05);
    display: flex;
    flex-direction: column;
}

.card-dot {
    border: 6rpx solid #3963bc;
    border-radius: 50%;
    height: 18rpx;
    margin-left: 26rpx;
    width: 18rpx;
}

.card-top,.card-top-left {
    align-items: center;
    display: flex;
}

.card-top {
    box-sizing: border-box;
    flex-direction: row;
    height: 100rpx;
    justify-content: space-between;
    padding-right: 26rpx;
    width: 750rpx;
}

.content-name {
    color: #45526b;
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
    font-weight: 400;
    line-height: 20px;
    margin-left: 8px;
}

.card-bottom {
    box-sizing: border-box;
    width: 750rpx;
}

.card-padding {
    padding: 0rpx 20rpx 40rpx;
}

.padd {
    padding-bottom: 40rpx;
}