.l-avatar,.l-avatar-image {
    align-items: center;
    display: inline-flex;
    justify-content: center;
}

.l-avatar-image {
    background: #ccc;
    flex: 1;
    overflow: hidden;
}

.l-avatar-text {
    color: #45526b;
    display: inline-block;
    font-size: 28rpx;
    height: max-content;
    line-height: 40px;
    width: max-content;
}

.open-data {
    height: 100%;
    width: 100%;
}

.l-avatar-text .l-avatar-text-text,.l-avatar-text .open-data {
    color: inherit;
    font-size: inherit;
    line-height: inherit;
}

.l-square {
    border-radius: 8rpx;
}

.l-circle {
    border-radius: 50%;
}

.l-placement-left,.l-placement-right {
    align-items: center;
    justify-content: center;
}

.l-placement-left {
    flex-direction: row-reverse;
}

.l-placement-left,.l-placement-left .l-avatar-text {
    margin-right: 24rpx;
}

.l-placement-right {
    flex-direction: row;
}

.l-placement-right .l-avatar-text {
    margin-left: 24rpx;
}

.l-placement-top {
    flex-direction: column-reverse;
}

.l-placement-top .l-avatar-text {
    margin-bottom: 12rpx;
}

.l-placement-bottom {
    flex-direction: column;
}

.l-placement-bottom .l-avatar-text {
    margin-top: 12rpx;
}