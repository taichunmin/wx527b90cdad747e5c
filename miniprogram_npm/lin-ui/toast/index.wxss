.container {
    position: fixed;
}

.containerNoMask {
    left: 50%;
    top: 50%;
    transform: translate(-50%,-50%);
}

.containerShowMask {
    align-items: center;
    display: flex;
    flex-direction: column;
    height: 100%;
    justify-content: center;
    left: 0;
    top: 0;
    width: 100%;
    z-index: 999;
}

.container .toast-bg {
    background: hsla(0,0%,100%,.5);
    height: 100%;
    left: 0;
    position: absolute;
    top: 0;
    width: 100%;
}

.container .toast-top {
    flex-direction: column-reverse;
}

.container .toast-right {
    flex-direction: row;
}

.container .toast-bottom {
    flex-direction: column;
}

.container .toast-left {
    flex-direction: row-reverse;
}

.container .toast {
    align-items: center;
    background: rgba(0,0,0,.7);
    border-radius: 12rpx;
    box-sizing: border-box;
    color: #fff;
    display: flex;
    font-size: 28rpx;
    justify-content: center;
    line-height: 40rpx;
    max-width: 400rpx;
    min-height: 88rpx;
    min-width: 280rpx;
    padding: 30rpx 50rpx;
    z-index: 999;
}

.container .toast .toast-icon {
    margin-bottom: 20rpx;
    margin-top: 20rpx;
}

.container .toast .toast-icon-loading {
    animation: loading-fadein 1.5s linear 0s infinite;
}

.container .toast .toast-text,.container .toast .toast-text-right {
    display: inline-block;
    text-align: center;
}

.container .toast .toast-text-right {
    margin-left: 20rpx;
}

.container .toast .toast-text-left {
    display: inline-block;
    margin-right: 20rpx;
    text-align: center;
}

.container .toast .toast-text-top {
    margin-bottom: 10rpx;
}

@-webkit-keyframes loading-fadein {
    0% {
        transform: rotate(0);
    }

    100% {
        transform: rotate(1turn);
    }
}

@keyframes loading-fadein {
    0% {
        transform: rotate(0);
    }

    100% {
        transform: rotate(1turn);
    }
}