.card-dot {
    border: 6rpx solid #3963bc;
    border-radius: 50%;
    height: 18rpx;
    margin-left: 26rpx;
    width: 18rpx;
}

.card-top {
    align-items: center;
    display: flex;
    flex-direction: row;
    height: 100rpx;
    width: 750rpx;
}

.content-name {
    color: #45526b;
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
    font-weight: 400;
    line-height: 20px;
    margin-left: 8px;
}

.card {
    display: inline-block;
    height: auto;
    margin: 10rpx auto!important;
}

.right-card {
    border-radius: 12rpx!important;
    height: 180rpx!important;
    width: 220rpx!important;
}

.content {
    color: #666;
    overflow: auto;
}

.avter-content,.content {
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 5;
    font-size: 26rpx;
    margin-top: 10rpx;
}

.avter-content {
    color: #333;
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
}

.avter-share-container {
    justify-content: flex-end;
}

.avter-share-container,.like-container {
    display: flex;
    flex-direction: row;
}

.like-container {
    align-items: center;
    margin-left: 40rpx;
}

.number {
    color: #666;
    font-size: 24rpx;
    margin-left: 12rpx;
}